@model ForouzanTask.Application.DTOs.Project.Inner.ChangeProjectDto
@using ForouzanTask.Application.DTOs.Project.Outer
@{
    Layout = null;
    List<OuterProjectTypeDto>? types = ViewData["Types"] as List<OuterProjectTypeDto>;
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Change">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" type="hidden" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">عنوان</label>
                <input asp-for="Title" class="form-control" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectType" class="control-label">نوع پروژه</label>
               <select asp-for="ProjectType" class="form-select">
                    @foreach(var item in types)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="ProjectType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ذخیره" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
