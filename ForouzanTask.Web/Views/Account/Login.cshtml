@using ForouzanTask.Application.DTOs.User;
@model LoginViewModel
@{
    ViewData["Title"] = "ورود";
}

<!--hero section start-->

<section class="hero-banner position-relative custom-pt-1 custom-pb-2 bg-dark" data-bg-img="/MainLayout/assets/images/bg/02.png">
    <div class="container">
        <div class="row text-white text-center z-index-1">
            <div class="col">
                <h1 class="text-white">ورود</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center bg-transparent p-0 m-0">
                        <li class="breadcrumb-item">
                            <a class="text-white" href="#">خانه</a>
                        </li>
                        <li class="breadcrumb-item">حساب کاربری</li>
                        <li class="breadcrumb-item active text-primary" aria-current="page">ورود</li>
                    </ol>
                </nav>
            </div>
        </div>
        <!-- / .row -->
    </div>
    <!-- / .container -->
    <div class="shape-1 bottom">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
            <path fill="#fff" fill-opacity="1" d="M0,288L48,288C96,288,192,288,288,266.7C384,245,480,203,576,208C672,213,768,267,864,245.3C960,224,1056,128,1152,96C1248,64,1344,96,1392,112L1440,128L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path>
        </svg>
    </div>
</section>

<!--hero section end-->
<!--body content start-->

<div class="page-content">

    <!--login start-->

    <section>
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-7 col-12">
                    <img class="img-fluid" src="/MainLayout/assets/images/login.png" alt="">
                </div>
                <div class="col-lg-5 col-12">
                    <div>
                        <h2 class="mb-3">ورود</h2>
                        <form method="post" asp-controller="Account" asp-action="Login">
                            <div class="messages"></div>
                            <div class="form-group">
                                <input id="form_name" type="text" asp-for="UserName" class="form-control" placeholder="نام کاربری" required="required" data-error="نام کاربری اجباری است">
                                <div class="help-block with-errors"></div>
                            </div>
                            <div class="form-group">
                                <input id="form_password" type="password" asp-for="Password" class="form-control" placeholder="رمز عبور" required="required" data-error="رمز عبور اجباری است">
                                <div class="help-block with-errors"></div>
                            </div>
                            <div class="form-group mt-4 mb-5">
                                <div class="remember-checkbox d-flex align-items-center justify-content-between">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" asp-for="RememberMe" id="check1">
                                        <label class="form-check-label" for="check1">مرا به خاطر بسپار</label>
                                    </div> <a class="btn-link" href="#">فراموشی رمز عبور؟</a>
                                </div>
                            </div><input type="submit" class="btn btn-primary" value="وارد شوید" />

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </section>

    <!--login end-->

</div>

<!--body content end-->
